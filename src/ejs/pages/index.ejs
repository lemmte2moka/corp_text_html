            <div class="p-top__product-list swiper-wrapper">
              <%
              for(let item of product) {
              -%>
              <div class="p-top__product-item swiper-slide">
                <p class="p-top__product-media"><img src="<%= item.media %>" alt="<%= item.title %>" width="294" height="294" loading="lazy" class="p-top__product-img"></p>
