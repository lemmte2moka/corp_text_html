            <div class="swiper-button-next c-swiper__button--next js-product-next"></div>
            <div class="swiper-pagination c-swiper__pagination js-product-pagination"></div>
          </div>
        </div>
        <div id="tab-content-2" class="c-tab__content js-tab-content">
