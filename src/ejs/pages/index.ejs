    <div class="p-top__lead">
      <h1 class="p-top__title">安全なお水を<br>あなたのもとへ</h1>
    </div>
    <div class="p-top__slider swiper-container js-top-swiper">
      <div class="p-top__slider-list swiper-wrapper">
        <%
        for(let item of top) {
        -%>
        <div class="p-top__slider-item swiper-slide">
          <picture class="p-top__slider-media">
            <source srcset="<%= item.pc_media %>"  media="(min-width: 768px)">
            <img src="<%= item.sp_media %>" alt="<%= item.label %>" width="1000" height="600" loading="eager" class="p-top__slider-img">
          </picture>
        </div>
        <% } -%>
      </div>
    </div>
  </div>
  

  <section class="l-section--lv2">
    <div class="l-container">
      <div class="c-sction-title">
        <div class="c-sction-title__head">
          <p class="c-head__ja--sub">ニュース</p>
          <h2 class="c-head__en--main">News</h2>
        </div>
        <div class="c-button-link is-pc">
          <p class="c-button-link__wrapper">
            <a href="/news/" class="c-button-link__anchor">
              <span class="c-button-link__label">News一覧</span>
            </a>
          </p>
        </div>
      </div>

      <div class="p-top__news-slider swiper-container js-news-swiper">
        <div class="p-top__news-list swiper-wrapper">
          <%
          for(let item of news) {
          -%>
          <div class="p-top__news-item swiper-slide">
            <p class="p-top__news-media"><img src="<%= item.media %>" alt="<%= item.title %>" width="380" height="240" loading="lazy" class="p-top__news-img"></p>
            <div class="p-top__news-date-tag">
              <p class="p-top__news-tag"><%= item.tag %></p>
              <p class="p-top__news-date"><%= item.date %></p>
            </div>
            <p class="p-top__news-title"><%= item.title %></p>
          </div>
          <% } -%>
        </div>
        <div class="swiper-button-prev c-swiper__button--prev js-news-prev"></div>
        <div class="swiper-button-next c-swiper__button--next js-news-next"></div>
        <div class="swiper-pagination c-swiper__pagination js-news-pagination"></div>
      </div>
      <div class="c-button-link is-sp">
        <p class="c-button-link__wrapper">
          <a href="/news/" class="c-button-link__anchor">
            <span class="c-button-link__label">News一覧</span>
